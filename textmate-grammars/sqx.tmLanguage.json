          "name": "constant.numeric.sql.sqC"
        },
        {
          "name": "string.quoted.single.sql.sqC",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "match": "''",
              "name": "constant.character.escape.sql.sqC"
            }
          ]
        },
        {
          "match": ":\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "0": { "name": "variable.parameter.sql.sqC" }
          }
