{
  "name": "db2-embedded-sql-syntax-c-cpp",
  "displayName": "Db2 Embedded SQL Syntax for C/C++",
  "description": "Syntax highlighing for embedded IBM Db2 SQL statements in C/C++ code",
  "repository": {
    "type": "git",
    "url": "https://github.com/spburtsev/db2-embedded-sql-syntax-c-cpp"
  },
  "license": "MIT",
  "publisher": "spburtsev",
  "icon": "images/icon.png",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "db2",
    "sql",
    "c",
    "c++",
    "syntax"
  ],
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:cpp",
    "onStartupFinished",
    "workspaceContains:**/*.sqc",
    "workspaceContains:**/*.sqC",
    "workspaceContains:**/*.sqx"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "path": "./textmate-grammars/embedded-sql.tmLanguage.json",
        "scopeName": "source.c.embedded.sql",
        "injectTo": [
          "source.c",
          "source.cpp",
          "source.c++"
        ],
        "embeddedLanguages": {
          "meta.embedded.sql.c": "sql"
        }
      }
    ],
    "languages": [
      {
        "id": "c",
        "extensions": [
          ".sqc"
        ],
        "aliases": [
          "C+SQL",
          "C with SQL",
          "sqc"
        ]
      },
      {
        "id": "cpp",
        "extensions": [
          ".sqC",
          ".sqx"
        ],
        "aliases": [
          "C++SQL",
          "C++ with SQL",
          "sqC",
          "sqx"
        ]
      }
    ],
    "snippets": [
      {
        "language": "c",
        "path": "./snippets.json"
      },
      {
        "language": "cpp",
        "path": "./snippets.json"
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.sqc": "c",
        "*.sqC": "cpp",
        "*.sqx": "cpp"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "node ./build.js",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --watch",
    "compile": "npm run esbuild",
    "watch": "npm run esbuild-watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.43.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.2",
    "eslint": "^9.23.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  }
}
