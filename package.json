{
  "name": "db2-embedded-sql-syntax-c-cpp",
  "displayName": "Db2 Embedded SQL Syntax for C/C++",
  "description": "Syntax highlighing for embedded IBM Db2 SQL statements in C/C++ code",
  "repository": {
    "type": "git",
    "url": "https://github.com/spburtsev/db2-embedded-sql-syntax-c-cpp"
  },
  "license": "MIT",
  "publisher": "spburtsev",
  "icon": "images/icon.png",
  "version": "0.2.1",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "db2",
    "sql",
    "c",
    "c++",
    "syntax"
  ],
  "activationEvents": [
    "onLanguage:c",
    "onLanguage:cpp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "grammars": [
      {
        "path": "./textmate-grammars/embedded-sql.tmLanguage.json",
        "scopeName": "source.c.embedded.sql",
        "injectTo": [
          "source.c",
          "source.cpp",
          "source.c++"
        ],
        "embeddedLanguages": {
          "meta.embedded.sql.c": "sql"
        }
      }
    ],
    "snippets": [
        {
            "language": "c",
            "path": "./snippets.json"
        },
        {
            "language": "cpp",
            "path": "./snippets.json"
        }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
